<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <img src="http://image.noelshack.com/fichiers/2018/45/3/1541578930-capture-d-ecran-2018-11-07-a-16-21-57.png" alt="logo">
  </a>

  <% if user_signed_in? %>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to "Add coworking space", new_coworking_space_path, class: "navbar-wagon-item navbar-wagon-link"  %>
    <%= link_to "Dashboard", mydashboard_path, class: "navbar-wagon-item navbar-wagon-link"  %>
    <div class="navbar-wagon-item">
      <div class="dropdown">
          <% if current_user.photo.filename.nil?  %>
            <img src="https://upload.wikimedia.org/wikipedia/commons/9/93/Default_profile_picture_%28male%29_on_Facebook.jpg" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle='dropdown'>
          <%#= cl_image_tag("hvolxl8zw04fsqk2v3fb", class: "avatar dropdown-toggle", id:"navbar-wagon-menu", data: {toggle: 'dropdown'}) %>
        <% else %>
          <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id:"navbar-wagon-menu", data: {toggle: 'dropdown'} %>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li> <%= link_to "Dashboard", mydashboard_path, class: "navbar-wagon-item navbar-wagon-link"  %></li>
          <li> <%= link_to "Edit profile", mydashboard_path, class: "navbar-wagon-item navbar-wagon-link"  %></li>
          <li class="navbar-wagon-item navbar-wagon-link">
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li> <%= link_to "Dashboard", mydashboard_path, class: "navbar-wagon-item navbar-wagon-link"  %></li>
      </ul>
    </div>
  </div>
</div>
<% else %>
<div class="navbar-wagon-right hidden-xs hidden-sm">
  <%= link_to "Sign up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link"  %>
  <%= link_to "Sign in", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link"  %>
  <!-- Profile picture with dropdown list -->
</div>
<!-- Dropdown appearing on mobile only -->
<div class="navbar-wagon-item hidden-md hidden-lg">
  <div class="dropdown">
    <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <li><%= link_to "Dashboard", mydashboard_path, class: "navbar-wagon-item navbar-wagon-link"%></li>
      <li><%= link_to "Sign up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link"%></li>
      <li><%= link_to "Sign in", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link"%></li>
    </ul>
  </div>
</div>
</div>


<% end %>







